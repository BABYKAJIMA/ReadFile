<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Header chuẩn Hòa Phát -->
    <header class="d-flex justify-content-between align-items-center px-4 py-2 bg-white border-bottom shadow-sm">
        <div class="d-flex align-items-center gap-3">
            <img src="~/image/logo.png" alt="Hòa Phát" style="width: 120px;" />
            <span class="fw-semibold text-dark fs-5">HỆ THỐNG CAMERA GIÁM SÁT</span>
        </div>
        <div>
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <span class="text-dark me-3">👤 @User.Identity.Name</span>
                <a href="/Login/Logout" class="btn btn-sm btn-outline-danger">Đăng xuất</a>
            }
            else
            {
                <a href="/Login" class="btn btn-sm btn-outline-primary">Đăng nhập</a>
            }
        </div>
    </header>

    <!-- Nội dung chính -->
    <main class="container mt-4">
        @RenderBody()
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
