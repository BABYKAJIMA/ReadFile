@model CameraView.Models.User

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!DOCTYPE html>
<html lang="vi"> 
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <!-- Logo Hòa Phát góc trái -->
    <div style="position: absolute; top: 20px; left: 20px;">
        <img src="~/image/logo.png" alt="Hòa Phát" style="width: 100px;" />
    </div>

    <!-- Form đăng nhập -->
    <div class="login-container">
        <h2>Đăng nhập</h2>

        <form asp-action="Index" method="post">
            <div class="mb-3">
                <input asp-for="Username" class="form-control" placeholder="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-login">Đăng nhập</button>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <p class="error-message">@ViewBag.Message</p>
        }

    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
